<!--Plantilla EJS para editar registros existentes-->

<!doctype html>
<html lang="en">
  <head>
    <!-- Etiquetas meta-->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">

    <!--Uso de BoxIcons-->
    <link href='https://unpkg.com/boxicons@2.1.1/css/boxicons.min.css' rel='stylesheet'>
    <title>CRUD</title>
  </head>

  <!--Barra de navegacion presente en todas las paginas-->
  <body class = "bg-dark">
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
      <div class="container-fluid">
        <a class="navbar-brand" href="/"><i class='bx bxs-bus bx-lg'></i>Autobuses del Norte</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
          <ul class="navbar-nav me-auto mb-2 mb-lg-0">

          </ul>
        </div>
      </div>
    </nav>

    <!--Formulario y envio de los datos para editar registros-->
    <% if(user) { %>

      <div class="container mt-4">     
        <div class="card border-secondary">  
            <div class="card-header">Editar Registro</div>
            <div class="card-body">
                <form action="/update" method="POST">
                    <input id = "id" name = "id" value="<%= user.id %>" hidden>
                    <div class="mb-3">
                        <label for="user" class="form-label">UID</label>
                        <input type="number" class="form-control" id="user" name="user" tabindex="1" value="<%= user.uid %>">
                    </div>   
                    <div class="mb-3">
                        <label for="user" class="form-label">Nombre</label>
                        <input type="text" class="form-control" id="nombre" name = "nombre" tabindex="2" value="<%= user.nombre %>">
                    </div>
                    <div class = "mb-3">
                        <label for="user" class="form-label">Unidad</label>
                        <input type="number" class="form-control" id="unidad" name = "unidad" tabindex="3" min="400" max="800" value="<%= user.n_camion %>">
                    </div>                              
                    <button type="submit" class="btn btn-primary" tabindex="5">Guardar</button>
                    <a href="/crud" class="btn btn-secondary">Cancelar</a>
                </form>
            </div>
        </div>        
  </div>
<%}%>



    <!-- Bootstrap con Popper-->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
  </body>
</html>
